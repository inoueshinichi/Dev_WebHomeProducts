# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

# Load dynamic modules. See /usr/share/doc/nginx/README.dynamic.
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 1024;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 4096;

    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;

    # ファイル一覧を有効化
    # autoindex on;

    # Gunicorn with unix socket
    #upstream gunicorn_with_unix_socket {
    #    server unix:{{WSGI_UNIX_SOCKET_FILE}} fail_timeout=0;
    #}

    # Gunicorn with tcp socket
    #upstream gunicorn_with_tcp_socket {
    #    server {{CONTAINER_APP_DOMAIN}}:{{CONTAINER_HTTP_PORT}} fail_timeout=0;
    #}

    server {
        server_name  {{CONTAINER_WEB_DOMAIN}} {{ENTRYPOINT_HOST_WEB_DOMAIN}};
        listen       {{WEB_HTTP_PORT}}; # IPv4
        listen       [::]:{{WEB_HTTP_PORT}}; # IPv6
        charset UTF-8;
        client_max_body_size {{MAX_REQUEST_BODY_SIZE}}; # 1リクエスト *MBまでを上限に受け取り許可

        # Load configuration files for the default server block.
        include /etc/nginx/default.d/*.conf;

        # 静的ファイルのパス
        root /usr/share/nginx/html;

        # 外部からのリクエストで /usr/share/nginx/html にファイルが存在するかチェック
        # もし存在しなければ、Gunicorn/Django へ中継 (proxy) する
        #location / {
        #   #try_files $uri/index.html @proxy_to_app;
        #   try_files $uri @proxy_to_app;
        #}
        
        # Gunicorn - Django
        #location @proxy_to_app {
        location / {
            proxy_set_header Host $http_host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_redirect off;

            # アクセスのたびにホストの名前解決を行う
            #set $app_entrance {{CONTAINER_APP_DOMAIN}};

            # UNIXソケットでGunicornと通信
            #proxy_pass http://unix_socket_to_gunicorn/;
            
            # TCPソケットでGunicornと通信
            #proxy_pass http://gunicorn_with_tcp_socket/;
            #proxy_pass  $app_entrance:{{CONTAINER_APP_HTTP_PORT}}/;
            proxy_pass http://host.docker.internal:{{HOST_APP_HTTP_PORT}}};
        }

        error_page 404 /404.html;
        location = /404.html {
        }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
        }
    }
}
